<p style="color: green"><%= notice %></p>

<h1>Listing Blogs</h1>

<div class="blogs">
  <% @blogs.each do |blog| %>
  	<div class="blog">
  		<%= link_to blog.title, blog %>, Posted <%= time_ago_in_words blog.created_at %> by <%= blog.user.email%>
  		<%= link_to 'Edit', edit_blog_path(blog) %>
  		<%= button_to 'Destroy', blog, method: :delete, data: {confirm: 'Are you sure?'} %>
  		<pre><%= blog.content %></pre>
		
		</div>
  <% end %>
</div>

<br>

<%= link_to "New blog", new_blog_path %>
