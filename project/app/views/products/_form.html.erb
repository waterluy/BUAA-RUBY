<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "名称", style: "display: block" %>
    <%= form.text_field :name %>
  </div>
<br/>
  <div>
    <%= form.label "描述", style: "display: block" %>
    <%= form.text_area :description, rows: 5%>
  </div>
<br/>
  <div>
    <%= form.label "图片路径", style: "display: block" %>
    <%= form.text_field :image_url %>
    (请按照 "/assets/pic_name.format" 的格式输入, format 为 jpg/png
)
  </div>
<br/>
  <!--<div>
    <%= form.label :sales, style: "display: block" %>
    <%= form.number_field :sales %>
  </div>-->

  <div>
    <%= form.label "单价", style: "display: block" %>
    <%= form.text_field :price %>
  </div>
<br/>
  <div>
    <%= form.label "上架分类", style: "display: block" %>
    <%= form.collection_select(:category_id, Category.all, :id, :name) %>
  </div>
<br/>
  <div>
    <%= form.label "颜色", style: "display: block" %>
    <%= form.collection_select(:color_id, Color.all, :id, :name) %>
  </div>
<br/>
  <div>
    <%= form.label "尺寸", style: "display: block" %>
    <%= form.collection_select(:size_id, Size.all, :id, :name) %>
  </div>
<br/>
  <div>
    <%= form.submit "保存"%>
  </div>
<% end %>
